<Window x:Class="dataMusic.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:dataMusic"
        mc:Ignorable="d"
        Background="Transparent"
        WindowStyle="None"
        AllowsTransparency="True"
        Icon="/musicPP.png"
        Title="DataMusic" Height="450" Width="800" ResizeMode="NoResize">
    <Canvas Name="windowPanel">
        <Label Content="DataMusic" FontFamily="Noto Sans JP" FontSize="15" VerticalContentAlignment="Center" HorizontalContentAlignment="Center"
               Canvas.Left="90"
               Width="110" Height="30"
               Foreground="White"/>

        <Button Content="X" FontFamily="Noto Sans JP" FontSize="20" VerticalContentAlignment="Center" HorizontalContentAlignment="Center"
               Canvas.Left="770"
               Width="30" Height="30"
               Background="Transparent" Foreground="Red" BorderBrush="Transparent"
               Focusable="False"
                
               Click="exitToMusic"/>

        <Button Content="-" FontFamily="Noto Sans JP" FontWeight="Bold" FontSize="20" VerticalContentAlignment="Center" HorizontalContentAlignment="Center"
               Canvas.Left="740"
               Width="30" Height="30"
               Background="Transparent" Foreground="LightGray" BorderBrush="Transparent"
               Focusable="False"
        
               Click="iconedToWindow"/>

        <Canvas Name="dragger" Width="800" Height="30" Panel.ZIndex="-1"/>

        <Ellipse Width="100" Height="100" Fill="DarkGray" Panel.ZIndex="1"/>
        <Image Height="80" Width="80" Canvas.Top ="10" Canvas.Left="15" Panel.ZIndex="2" Source="/programPP.png"/>

        <Border Canvas.Left="30" Canvas.Top="30"
                Width="770" Height="420"
                Background="Transparent"
                Panel.ZIndex="0"
                CornerRadius="20">
            <Canvas Name="mainPanel">
                <Border CornerRadius="25"
                            Width="180" Height="420"
                            Background="Gray" BorderBrush="LightGray" BorderThickness="1">
                    <Canvas Name="musicLib">
                        <Label Content="Libary" FontFamily="Noto Sans JP" FontSize="15" VerticalContentAlignment="Center" HorizontalContentAlignment="Center"
                                Canvas.Left="60" Canvas.Top="10"
                                Width="120" Height="40"
                                Foreground="White"/>

                        <Button Content="+" FontFamily="Noto Sans JP" FontSize="14" VerticalContentAlignment="Center" HorizontalContentAlignment="Center"
                               Canvas.Left="148" Canvas.Top="10"
                               Width="20" Height="20"
                               Foreground="White" Background="Transparent" BorderBrush="Transparent"
                                
                                Click="newLibCrate"/>



                        <Border CornerRadius="25" 
                                Width="180" Height="350"
                                Canvas.Top="70">
                            <ScrollViewer Width="180" Height="350" 
                                          HorizontalScrollBarVisibility="Hidden" 
                                          VerticalScrollBarVisibility="Hidden">
                                <ItemsControl x:Name="libsPanel">
                                    <ItemsControl.ItemsPanel>
                                        <ItemsPanelTemplate>
                                            <WrapPanel Orientation="Horizontal" Width="180"/>
                                        </ItemsPanelTemplate>
                                    </ItemsControl.ItemsPanel>
                                </ItemsControl>
                            </ScrollViewer>
                        </Border>
                    </Canvas>
                </Border>

                <Border CornerRadius="25"
                        Canvas.Left="180"
                        Width="590" Height="50"
                        Background="Gray" BorderBrush="LightGray" BorderThickness="1">
                    <WrapPanel VerticalAlignment="Center" HorizontalAlignment="Center">
                        <Button Click="goToHome"
                                Content="🏠"
                                Background="Transparent" Foreground="White" BorderBrush="Transparent"/>

                        <Border CornerRadius="17" Background="White">
                            <TextBox Name="search"
                                     Width="400"
                                     Background="Transparent" BorderBrush="Transparent" TextChanged="search_TextChanged"/>
                        </Border>

                        <Button Click="downloandsMusic"
                                Content="⬇️"
                                Background="Transparent" Foreground="White" BorderBrush="Transparent"
                                Margin="110,0,0,0"/>
                    </WrapPanel>

                </Border>

                <Border CornerRadius="25"
                        Canvas.Left="180" Canvas.Top="50"
                        Width="590" Height="370"
                        Background="Gray" BorderBrush="LightGray" BorderThickness="1">
                    <Canvas>
                        <ScrollViewer Width="590" Height="320" 
                                      HorizontalScrollBarVisibility="Hidden" 
                                      VerticalScrollBarVisibility="Hidden">
                            <ItemsControl x:Name="otherMusicPanel">
                                <ItemsControl.ItemsPanel>
                                    <ItemsPanelTemplate>
                                        <WrapPanel Orientation="Horizontal" Width="590"/>
                                    </ItemsPanelTemplate>
                                </ItemsControl.ItemsPanel>
                            </ItemsControl>
                        </ScrollViewer>
                    </Canvas>
                </Border>

                <Border  CornerRadius="25"
                         Canvas.Left="180" Canvas.Top="370"
                         Width="590" Height="50"
                         Background="Gray" BorderBrush="LightGray" BorderThickness="1">
                    <Canvas Name="playingForMusic">
                        <Button Content="&lt;" Click="beforeMusic"
                                Width="15"
                                Canvas.Left="245" Canvas.Top="20"/>

                        <Button Content="Play" Name="playOrStop"
                                Width="50"
                                Canvas.Left="265" Canvas.Top="20"
                                
                                Click="musicOfPlayOrStop"/>

                        <Button Content=">" Click="afterMusic"
                                Width="15"
                                Canvas.Left="320" Canvas.Top="20"/>

                        <ProgressBar Name="musicProgressBar"
                                     Width="570" Height="10"
                                     Canvas.Left="10" Canvas.Top="5"
                                     Background="Gray" Foreground="White" BorderBrush="Transparent" ValueChanged="musicProgressBar_ValueChanged"/>

                        <Slider Name="musicVolumeSlider"
                                Width="100"
                                Canvas.Left="480" Canvas.Top="28" 
                                Maximum="1" Minimum="0" ValueChanged="musicVolumeSlider_ValueChanged"/>

                        <CheckBox Name="loopOrMixed"
                                  Width="14" Height="14"
                                  Canvas.Left="219" Canvas.Top="23"
                                  IsChecked="{Binding IsLoopOrMixed, Mode=TwoWay}"/>
                        <Label Content="Mix: " Canvas.Left="191" Canvas.Top="18" HorizontalAlignment="Left" Height="24" VerticalAlignment="Center"
                               FontSize="10" Width="28"/>

                    </Canvas>
                </Border>
            </Canvas>
        </Border>
    </Canvas>
</Window>
